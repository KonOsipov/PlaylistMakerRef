<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/track_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/track_icon_margin"
        tools:src="@drawable/placeholder">

    </ImageView>

    <TextView
        android:id="@+id/track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/track_text_margin_start"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/track_text_margin_end"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/settings_text_size"
        tools:text="Smells Like Teen Spirit xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/track_text_margin_start"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="@dimen/track_text_margin_end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/musician_name"
            style="@style/TrackInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Nirvana">

        </TextView>

        <ImageView
            style="@style/SettingsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/drawable_ellipse_padding"
            android:src="@drawable/ellipse">

        </ImageView>

        <TextView
            android:id="@+id/track_timing"
            style="@style/TrackInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="05:01">

        </TextView>
    </LinearLayout>

    <ImageView
        style="@style/SettingsImage"
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_gravity="end"
        android:layout_marginEnd="24dp"
        android:src="@drawable/license">

    </ImageView>

</FrameLayout>