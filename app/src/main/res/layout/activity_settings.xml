<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/corner_margin"
            android:layout_marginTop="@dimen/corner_margin"
            android:src="@drawable/arrow"
            app:tint="@color/tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="@dimen/margin_title_top"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/settings"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="22sp" />

    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_button_height"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:buttonTint="@color/white"
        android:fontFamily="@font/ys_display_regular"
        android:letterSpacing="0"
        android:paddingStart="@dimen/settings_padding_start"
        android:paddingEnd="5dp"
        android:text="@string/dark_theme"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/settings_text_size"
        android:thumbTint="@color/settings_icon_night"
        android:trackTint="@color/switch_back_night" />

    <TextView
        android:id="@+id/share_button"
        style="@style/SettingsButtons"
        android:text="@string/share"
        app:drawableEndCompat="@drawable/share" />

    <TextView
        android:id="@+id/support_button"
        style="@style/SettingsButtons"
        android:text="@string/support"
        app:drawableEndCompat="@drawable/support" />

    <TextView
        android:id="@+id/agreement_button"
        style="@style/SettingsButtons"
        android:text="@string/agreement"
        app:drawableEndCompat="@drawable/license" />


</LinearLayout>

