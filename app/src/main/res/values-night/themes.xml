<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.playlistmakerref" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">#1A1B22</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">#3772E7</item>
    <item name="colorSecondaryVariant">@color/white</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    <item name="background">@color/bg</item>
    <item name="colorOnSurface">@color/search</item>
    <item name="colorOnSurfaceVariant">@color/search_back</item>

    <item name="colorError">@color/button_text_and_night_background</item>
    <item name="trackColor">@color/switch_back_night</item>
</style>
</resources>
