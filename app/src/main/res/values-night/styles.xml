<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_buttons_icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingStart">@dimen/settings_padding_start</item>
        <item name="android:paddingVertical">@dimen/main_button_paddingVertical</item>
        <item name="android:paddingEnd">@dimen/main_button_paddingEnd</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">end</item>

        <item name="drawableTint">@color/white</item>

    </style>
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/background</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:windowTitleStyle">@style/ToolbarTittleStyle</item>
    </style>

    <style name="ToolbarTittleStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TrackInfoText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/settings_icon</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TrackRealInfo">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:gravity">end</item>
    </style>
</resources>
